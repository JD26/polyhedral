\begin_inset Formula 
\[
T\left(x,t\right)\coloneqq\sum_{v\in\mathcal{V}}b_{v}\left(x\right)z_{v}\left(t\right).
\]

\end_inset

Let 
\begin_inset Formula $v\in\mathcal{V}$
\end_inset

.
 We have
\begin_inset Formula 
\[
T\left(v,t\right)=\sum_{w\in\mathcal{V}}b_{w}\left(v\right)z_{w}\left(t\right)=\sum_{w\in\mathcal{V}}\delta_{wv}z_{w}\left(t\right)=z_{v}\left(t\right).
\]

\end_inset

Let 
\begin_inset Formula $e_{i,j}$
\end_inset

 be an edge and 
\begin_inset Formula $v,w$
\end_inset

 be its vertices.
 Let 
\begin_inset Formula $x\in e_{i,j}$
\end_inset

.
 We have
\begin_inset Formula 
\[
T\left(x,t\right)=\sum_{u\in\mathcal{V}}b_{u}\left(x\right)z_{u}\left(t\right)=b_{v}\left(x\right)z_{v}\left(t\right)+b_{w}\left(x\right)z_{w}\left(t\right)
\]

\end_inset

with 
\begin_inset Formula $b_{v}\left(x\right),b_{w}\left(x\right)>0$
\end_inset

.
 Thus, given 
\begin_inset Formula $k\in\mathcal{K}$
\end_inset

 it follows that
\begin_inset Formula 
\[
\hat{\phi}_{k}\left(T\left(x,t\right),t\right)=b_{v}\left(x\right)z_{v}\left(t\right)\cdot n_{k}\left(t\right)+b_{w}\left(x\right)z_{w}\left(t\right)\cdot n_{k}\left(t\right)-a_{k}\left(t\right).
\]

\end_inset

If 
\begin_inset Formula $k\in\left\{ i,j\right\} $
\end_inset

, then
\begin_inset Formula 
\[
\hat{\phi}_{k}\left(T\left(x,t\right),t\right)=\left(b_{v}\left(x\right)+b_{w}\left(x\right)\right)a_{k}\left(t\right)-a_{k}\left(t\right)=0
\]

\end_inset

because 
\begin_inset Formula $z_{v}\left(t\right),z_{w}\left(t\right)\in\partial\omega_{k}\left(t\right)$
\end_inset

.
 Hence 
\begin_inset Formula $T\left(e_{i,j},t\right)\subset\partial\omega_{i}\left(t\right)\cap\partial\omega_{j}\left(t\right)$
\end_inset

.
 If 
\begin_inset Formula $k\in\mathcal{K}\backslash\left\{ i,j\right\} $
\end_inset

 we have three cases: 
\begin_inset Formula $\partial\omega_{k}\left(t\right)$
\end_inset

 is the third plane containing to 
\begin_inset Formula $z_{v}\left(t\right)$
\end_inset

, 
\begin_inset Formula $\partial\omega_{k}\left(t\right)$
\end_inset

 is the third plane containing to 
\begin_inset Formula $z_{w}\left(t\right)$
\end_inset

 and 
\begin_inset Formula $\partial\omega_{k}\left(t\right)$
\end_inset

 is a plane that does not contain neither 
\begin_inset Formula $z_{v}\left(t\right)$
\end_inset

 and 
\begin_inset Formula $z_{v}\left(t\right)$
\end_inset

.
 In the first case
\begin_inset Formula 
\begin{align*}
\hat{\phi}_{k}\left(T\left(x,t\right),t\right) & =b_{v}\left(x\right)a_{k}\left(t\right)+b_{w}\left(x\right)z_{w}\left(t\right)\cdot n_{k}\left(t\right)-a_{k}\left(t\right)\\
 & <b_{v}\left(x\right)a_{k}\left(t\right)+b_{w}\left(x\right)a_{k}\left(t\right)-a_{k}\left(t\right)\\
 & =\left(b_{v}\left(x\right)+b_{w}\left(x\right)\right)a_{k}\left(t\right)-a_{k}\left(t\right)=0.
\end{align*}

\end_inset

In the second case
\begin_inset Formula 
\begin{align*}
\hat{\phi}_{k}\left(T\left(x,t\right),t\right) & =b_{v}\left(x\right)z_{v}\left(t\right)\cdot n_{k}\left(t\right)+b_{w}\left(x\right)a_{k}\left(t\right)-a_{k}\left(t\right)\\
 & <b_{v}\left(x\right)a_{k}\left(t\right)+b_{w}\left(x\right)a_{k}\left(t\right)-a_{k}\left(t\right)\\
 & =\left(b_{v}\left(x\right)+b_{w}\left(x\right)\right)a_{k}\left(t\right)-a_{k}\left(t\right)=0.
\end{align*}

\end_inset

Finally, in the third case,
\begin_inset Formula 
\begin{align*}
\hat{\phi}_{k}\left(T\left(x,t\right),t\right) & =b_{v}\left(x\right)z_{v}\left(t\right)\cdot n_{k}\left(t\right)+b_{w}\left(x\right)z_{w}\left(t\right)\cdot n_{k}\left(t\right)-a_{k}\left(t\right)\\
 & <b_{v}\left(x\right)a_{k}\left(t\right)+b_{w}\left(x\right)a_{k}\left(t\right)-a_{k}\left(t\right)\\
